<ScrollView android:id="@+id/scrollView1"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"
    tools:context="co.example.vishnu.hma.SignUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstname_text"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="65dp"
        android:text="First Name"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/firstname"
        android:inputType="text"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastname_text"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="65dp"
        android:text="Last Name"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/lastname"
        android:inputType="text"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_text"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="65dp"
        android:text="Username"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:inputType="text"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_text"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="65dp"
        android:text="Password"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/pwd"
        android:inputType="textPassword"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_text"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="65dp"
        android:text="Confirm"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/confirmpwd"
        android:inputType="textPassword"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/height_text"
        android:inputType="number"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="65dp"
        android:text="Height"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/height"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="165dp"
        android:hint="Inches"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight_text"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="65dp"
        android:text="Weight"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:inputType="number"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="165dp"
        android:hint="Pounds"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/age_text"
        android:inputType="number"
        android:text="Age"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="65dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:hint="Years"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/gender_text"
        android:text="Gender"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="65dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:id="@+id/gender"
        android:checkedButton="@+id/male"
        android:layout_marginLeft="165dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male"
            android:text="Male" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:text="Female" />

    </RadioGroup>

        <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/wrist_text"
        android:text="Wrist Circumference"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="65dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/wrist"
        android:hint="Inches"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="165dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup2"
        android:layout_marginTop="545dp"
        android:layout_marginLeft="135dp"
        android:text="Sign up"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/waist_text"
        android:text="Waist size"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="65dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/waist"
        android:hint="Inches"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/hip_text"
        android:text="Hip size"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="65dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/hip"
        android:hint="Inches"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="165dp"/>

</RelativeLayout>

    </ScrollView>
